<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.stage.Screen?>

<AnchorPane xmlns="http://javafx.com/javafx/17.0.2-ea"
            xmlns:fx="http://javafx.com/fxml/1" fx:controller="edumath.controller.RootController"
            styleClass="anchor" stylesheets="@../edu/css/root.css">
    <MenuBar styleClass="menuBar">
        <Menu mnemonicParsing="false" styleClass="menuBar" text="Файл">
            <MenuItem mnemonicParsing="false" text="Настройки" />
        </Menu>
        <Menu mnemonicParsing="false" styleClass="menuBar" text="Предметы">
            <MenuItem mnemonicParsing="false" onAction="#getMath" text="Математика" />
            <MenuItem mnemonicParsing="false" onAction="#getEn" text="Английский" />
        </Menu>
        <Menu mnemonicParsing="false" styleClass="menuBar" text="Сервис">
            <MenuItem mnemonicParsing="false" onAction="#restore" text="Восстановить задачи в БД" />
            <MenuItem mnemonicParsing="false" text="О программе" />
        </Menu>
    </MenuBar>
    <Pane styleClass="panes" layoutY="30.0">
        <fx:include fx:id="math" source="math/math.fxml" />
        <fx:include fx:id="en" source="en.fxml" visible="false" />
    </Pane>
</AnchorPane>
