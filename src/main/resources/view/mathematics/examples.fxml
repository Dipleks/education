<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.ToggleButton?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="500.0" prefWidth="900.0" xmlns="http://javafx.com/javafx/20.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="edu.controller.mathematics.ExamplesController">
   <children>
      <VBox alignment="CENTER_RIGHT" spacing="20.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="100.0">
         <children>
            <ToggleButton fx:id="buttonAddSub" mnemonicParsing="false" onAction="#addAndSub" styleClass="buttonControl" stylesheets="@../../css/examples.css" text="Сложение и Вычитание" textAlignment="CENTER" wrapText="true" />
            <ToggleButton fx:id="buttonMoreOrEqual" mnemonicParsing="false" onAction="#moreOrEqual" styleClass="buttonControl" stylesheets="@../../css/examples.css" text="Больше или Равно" textAlignment="CENTER" wrapText="true" />
            <ToggleButton fx:id="buttonMultDiv" mnemonicParsing="false" onAction="#multAndDiv" styleClass="buttonControl" stylesheets="@../../css/examples.css" text="Умножение и Деление" textAlignment="CENTER" wrapText="true" />
         </children>
         <padding>
            <Insets right="30.0" />
         </padding>
      </VBox>
      <StackPane prefHeight="425.0" prefWidth="729.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="180.0" AnchorPane.topAnchor="0.0">
         <children>
            <VBox alignment="CENTER">
               <children>
                  <HBox spacing="10.0">
                     <children>
                        <Label styleClass="countAnswer" stylesheets="@../../css/task.css" text="Колличество верно решенных примеров:">
                           <padding>
                              <Insets bottom="10.0" />
                           </padding>
                        </Label>
                        <Label fx:id="countSuccess" styleClass="countAnswer" stylesheets="@../../css/task.css" text="0" />
                     </children>
                     <padding>
                        <Insets left="30.0" />
                     </padding>
                  </HBox>
                  <HBox spacing="10.0">
                     <children>
                        <Label styleClass="countAnswer" stylesheets="@../../css/task.css" text="Колличество ошибок:" />
                        <Label fx:id="countException" styleClass="countAnswer" stylesheets="@../../css/task.css" text="0" />
                     </children>
                     <padding>
                        <Insets bottom="20.0" left="30.0" />
                     </padding>
                  </HBox>
                  <Label fx:id="status">
                     <font>
                        <Font name="System Bold Italic" size="18.0" />
                     </font>
                  </Label>
                  <HBox alignment="CENTER" spacing="10.0">
                     <children>
                        <Label fx:id="firstValue" styleClass="instance" stylesheets="@../../css/examples.css" text="0" />
                        <Label fx:id="sign" styleClass="instance" stylesheets="@../../css/examples.css" text="+" />
                        <Label fx:id="secondValue" styleClass="instance" stylesheets="@../../css/examples.css" text="0" />
                        <Label styleClass="instance" stylesheets="@../../css/examples.css" text="=" />
                        <TextField fx:id="result" alignment="CENTER" onKeyPressed="#checkResultEntered" prefHeight="39.0" prefWidth="83.0" styleClass="instance" stylesheets="@../../css/examples.css" />
                     </children>
                     <padding>
                        <Insets bottom="20.0" top="20.0" />
                     </padding>
                  </HBox>
                  <HBox alignment="CENTER">
                     <children>
                        <Button mnemonicParsing="false" onAction="#checkResult" styleClass="buttonControl" stylesheets="@../../css/task.css" text="Проверить результат" />
                     </children>
                  </HBox>
               </children>
            </VBox>
         </children>
      </StackPane>
   </children>
</AnchorPane>
